<form class="form form__login">
  <h2 class="form__title">{{label}}</h2>
  <div class="form__box">
    <div class="form__label">Enter your email</div>
    <input class="form__input" type="email" name="email">
  </div>

  <div class="form__box">
    <div class="form__label">Enter your password</div>
    <input class="form__input" type="password" name="password">
  </div>
  <button class="form__btn button" type="submit" name="button">{{label}}</button>
</form>